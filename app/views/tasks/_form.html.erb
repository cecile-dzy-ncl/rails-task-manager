<%= form_for(@task) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-controls' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-controls' %>
  </div>

<% unless @task.new_record? %>

  <div class="form-group">
    <%= f.label 'Complete' %>
    <%= f.check_box :completed, class: 'form-controls' %>
  </div>

<% end %>

  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>
